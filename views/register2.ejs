    <div class="register-form d-inline-flex p-2" style="max-width: 100%;">
      <h1>Form Registration</h1>
      <form action="/register" method="POST">
        <label for="user">Usuario</label>
        <input type="text" name="username" pattern="[a-z]{1,15}" required tabindex="1" autofocus>
        <label for="name">Nombre y Apellido</label>
        <input type="text" name="name" required tabindex="2">
        <label for="email">Correo</label>
        <input type="email" class="email-input" name="email" required tabindex="3">
        <label for="rol">Rol</label>
        <select id="rol" name="rol" class="select-css" tabindex="4">
          <option value="admin" selected>Admin</option>
          <option value="data entry">Data Entry</option>
        </select>
        <br>
        <label for="pass">Password</label>
        <input type="password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="La contraseÃ±a debe tener mayusculas, minusculas y numeros" required tabindex="5">
        <div style="display: inline;">
          
          <button class="btn btn-primary botonsave" id="botonsave" type="submit">Registrar</button>
        </div>
      </form>
    </div>

